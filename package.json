{
  "name": "soulstate",
  "type": "module",
  "version": "1.0.0",
  "description": "The Zero-Overhead State of Mind. A minimalist, high-performance state management library.",
  "author": "Kasih Agustinus",
  "license": "MIT",
  "homepage": "https://github.com/kasihagustinusT/soulstate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasihagustinusT/soulstate.git"
  },
  "bugs": {
    "url": "https://github.com/kasihagustinusT/soulstate/issues"
  },
  "keywords": [
    "state",
    "state-management",
    "react",
    "zustand",
    "performance",
    "fast",
    "minimal",
    "soulstate"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:bench": "vitest bench",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "release": "semantic-release",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^23.0.8",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "use-sync-external-store": "^1.2.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
